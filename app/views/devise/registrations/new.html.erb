<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2 class="form-signin-heading">Sign up</h2>
    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    <%= f.label :name, class: 'sr-only' %><br />
    <%= f.text_field :name, class: 'form-control'%>
    <%= f.label :password, class: 'sr-only' %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    <%= f.label :password_confirmation, class: 'sr-only' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    <div class="actions">
      <br />
      <%= f.submit "Sign up", class:"btn btn-success" %>
    </div>
  <% end %>
  <br />
  <%= render "devise/shared/links" %>
</div>
